<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context=".CustomerLoginRegisterActivity">

    <TextView
        android:id="@+id/customer_status"
        android:layout_width="236dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/aldrich"
        android:text="Customer Login"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/email_customer"
        android:layout_width="280dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="61dp"
        android:background="#63FFFFFF"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:textColor="#55B601"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#55B601"
        android:textColorLink="#55B601"
        android:textCursorDrawable="?android:attr/textCursorDrawable" />

    <EditText
        android:id="@+id/password_customer"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="62dp"
        android:background="#63FFFFFF"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="  password"
        android:inputType="textPassword"
        android:scrollbarThumbHorizontal="@android:color/holo_green_light"
        android:scrollbarThumbVertical="@drawable/ic_launcher_background"
        android:shadowColor="#95FFFFFF"
        android:textColor="#55B601"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#55B601"
        android:textColorLink="#55B601"
        android:visibility="visible" />

    <Button
        android:id="@+id/customer_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="119dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/aldrich"
        android:text="Login"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/register_customer_link"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="102dp"
        android:text="Don't have an account?"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/customer_register_btn"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="563dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="106dp"
        android:background="#F4F4F0"
        android:fontFamily="@font/aldrich"
        android:text="Register"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/customer_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="472dp"
        android:layout_marginEnd="35dp"
        android:visibility="invisible" />
</RelativeLayout>